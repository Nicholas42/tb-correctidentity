{
  "manifest_version": 2,
  "name": "Correct Identity 2",
  "description": "Allows you to configure the identity that will be chosen upon composing mail.",
  "version": "2.0.0",
  "author": "L. Dreier",
  "applications": {
    "gecko": {
      "id": "{23347f97-114a-4448-8bff-8a20ef8d135e}",
      "strict_min_version": "78.0",
      "strict_max_version": "91.*"
    }
  },
  "default_locale": "en-US",
  "permissions": ["accountsRead", "compose", "tabs", "storage"],
  "experiment_apis": {
    "exp": {
      "schema": "schema.json",
      "parent": {
        "scopes": [ "addon_parent" ],
        "paths": [ [ "exp" ] ],
        "script": "scripts/exp_api.js"
      }
    }
  },
  "background": {
    "scripts": ["scripts/background-script.js"]
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab" : false,
    "browser_style": true
  }
}
